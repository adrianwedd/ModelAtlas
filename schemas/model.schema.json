{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Model Metadata",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "description": { "type": "string" },
    "pull_count": { "type": "integer" },
    "last_updated": { "type": "string", "format": "date-time" },
    "license": { "type": "string" },
    "architecture": { "type": "string" },
    "family": { "type": "string" },
    "tags": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "size": { "type": "string" },
          "context_window": { "type": "string" },
          "input_type": { "type": "string" },
          "last_updated": { "type": "string", "format": "date-time" },
          "digest": { "type": "string" }
        },
        "required": ["name", "size", "context_window", "input_type", "last_updated", "digest"]
      }
    },
    "benchmarks": {
      "type": "object",
      "additionalProperties": { "type": "number" }
    },
    "summary": { "type": "string" },
    "use_cases": {
      "type": "array",
      "items": { "type": "string" }
    },
    "trust_score": { "type": "number", "minimum": 0, "maximum": 1 }
  },
  "required": ["name", "description", "tags"]
}